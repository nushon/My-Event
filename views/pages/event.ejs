            </div>
          
        </div>
      </div>
      
      
      <!-- Application form  -->
  <div id="applcation_cont" class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Application Form For <%= event.event_name %></h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Fill in the below form to apply for <%= event.event_name %> event.</p>
    </div>
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <div class="flex flex-wrap -m-2" id="application_form">
        
  </div>
  <div class="p-2 w-full">
    <button id="apply_btn" class="flex mx-auto text-white bg-yellow-500 border-0 py-2 px-8 focus:outline-none hover:bg-yellow-600 rounded text-lg" onclick="send_form_values();">Apply</button>
  </div>
  </div>
  </div>
  

    </section>
    <!-- Footer -->
     <%- include('../template/footer') -%>
     <script>
       let alert = document.getElementById("alert");
       let applcation_cont = document.getElementById("applcation_cont");
       let ele;

       function success_alert(){
        applcation_cont.style.display = "none";
         alert.style.display = "block";
       }
       function generate(){
        let questionnaires_values = '<%= event.qValues %>';
        // console.log(questionnaires);
        let questionnaires_keys = '<%= event.qKeys%>';

        let final = questionnaires_values.split(',');
        let final_keys = questionnaires_keys.split(',');

        

        for (let i = 0; i < final.length; i++) {
          console.log("Final: ",  final[i]);
        ele = final[i];

        let type = "text";

        if (final_keys[i] === "DOB") {
          type = "date";
        }else if (final_keys[i] === "Email") {
          type = "email";
        }else if (final_keys[i] === "Phone_number") {
          type = "number";
        }

        application_form.innerHTML += `
          <div class="p-2 w-1/2">
          <div class="relative">
            <label for="${final_keys[i].toLowerCase()}-{i}" class="leading-7 text-sm text-gray-600">${ele}</label>
            <input type="${type}" required id="${final_keys[i].toLowerCase()}" name="${final_keys[i].toLowerCase()}-${i}" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-yellow-500 focus:bg-white focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
        </div>
        `;
        
        }

        console.log("the loop:", ele);
       }
       generate();
      let name,
          dob,
          address,
          email,
          phone_number,
          sex,
          education_status,
          status,
          about_you,
          why_apply,
          why_you,
          event_id

       function getValue(){
         const inputElements = document.querySelectorAll("input");

         for (let index = 0; index < inputElements.length; index++) {
           const element = inputElements[index];

          //  console.log(`${element.id}: ${element.value}`);
          let obj = `${element.id}`;
          if(obj === "name"){
            name = `${element.value}`;
          console.log("Participant's Name", name);
          }
          else  if(obj === "dob"){
            dob = `${element.value}`;
            console.log("Participant's DOB", dob);
          }
          else if(obj === "address"){
            address = `${element.value}`;
            console.log("Participant's Address: ", address);
          }

          else if(obj === "email"){
            email = `${element.value}`;
            console.log("Participant's Email: ", email);
          }

          else if(obj === "phone_number"){
            phone_number = `${element.value}`;
            console.log("Participant's Phone Number: ", phone_number);
          }

          else if(obj === "sex"){
            sex = `${element.value}`;
            console.log("Participant's Sex: ", sex);
          }

          else if(obj === "education_status"){
            education_status = `${element.value}`;
            console.log("Participant's Education Status: ", education_status);
          }
          else if(obj === "status"){
            status = `${element.value}`;
            console.log("Participant's Status: ", status);
          }
          else if(obj === "about_you"){
            about_you = `${element.value}`;
            console.log("Participant's About you: ", about_you);
          }
          else  if(obj === "why_apply"){
            why_apply = `${element.value}`;
            console.log("Participant's Why apply: ", why_apply);
          }
          else if(element.value === "why_you"){
            why_accept = `${element.value}`;
            console.log("Participant's Why you: ", why_accept);
          }
           
         }
         
        //  console.log({inputElements})
       }
         

       function send_form_values(){
// Calling the get value function 
        getValue();
//  Assigning the current to the form and post it to the event_form_id colum
        event_id = '<%= event.id %>';
        
         let questions_values = {
          name: name,
          dob: dob,
          address: address,
          email: email,
          phone_number: phone_number,
          sex: sex,
          education_status: education_status,
          status: status,
          about_you: about_you,
          why_apply: why_apply,
          why_accept: why_you,
          event_form_id: event_id
}

         console.log("Questions Values: ", questions_values);
        let url = "/question_values";
        fetch(url,{
            method: "POST",
            body: JSON.stringify(questions_values),
            headers: {
                "Content-type": "application/json; charset=UTF-8"
            }
        }).then(function(response) {
            return response.json();
        }) .catch(function (err){
            console.log(err);
           
        });
        success_alert();
}

// submit();
     </script> 
