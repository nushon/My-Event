<%- include('../template/head') -%>
    <!-- Header  -->
    <%- include('../template/header')-%>
      <section class="text-gray-600 body-font relative">
        
        <div class="container px-5 py-24 mx-auto flex items-center" >
          <div id="attend_form" class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
            <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Attend Event</h2>
            <p class="leading-relaxed mb-5 text-gray-600">Please follow the below instructions to attend your event.</p>
            <div class="relative mb-4">
              <label for="name" class="leading-7 text-sm text-gray-600">Event Name</label>
              <input type="text" id="name" name="name" class="w-full bg-white rounded border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
              <label for="event_id" class="leading-7 text-sm text-gray-600">Event Id</label>
              <input type="text" id="event_id" name="event_id" class="w-full bg-white rounded border border-gray-300 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <button class="text-white bg-yellow-500 border-0 py-2 px-6 focus:outline-none hover:bg-yellow-600 rounded text-lg"><a href="/event">Attend</a></button>
            <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral artisan.</p>
          </div>
        </div>
      </section>
       <!-- Footer -->
       <%- include('../template/footer') -%>
</body>
</html>